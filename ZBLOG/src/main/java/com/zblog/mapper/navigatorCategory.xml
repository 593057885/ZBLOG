<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zblog.dao.NavigatorCategoryDao">

	<sql id="navCateColumns">
		ID,
		name,
		link,
		description,
		sort
	</sql>

	<!-- 获取所有导航分类 -->
	<select id="getNavigatorCategorys" resultType="com.zblog.dmo.NavigatorCategory">
	    SELECT 
			<include refid="navCateColumns"/>
		FROM
			tb_nav_category
		ORDER BY 
			sort desc
	</select>
	

</mapper>